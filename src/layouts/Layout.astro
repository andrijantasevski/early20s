---
import { SEO } from "astro-seo";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-background text-foreground">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      title={title}
      description="A collection of poems written by Andrijan Tasevski."
      openGraph={{
        basic: {
          title,
          type: "website",
          image: "https://early20s.andrijan.dev/og/early20s-og.png",
          url: "https://early20s.andrijan.dev/",
        },
        optional: {
          description: "A collection of poems written by Andrijan Tasevski.",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "https://early20s.andrijan.dev/",
        title,
        description: "A collection of poems written by Andrijan Tasevski.",
        image: "https://early20s.andrijan.dev/og/early20s-og.png",
        creator: "@_andrijan",
      }}
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body
    class="bg-background text-foreground max-w-screen-2xl w-11/12 mx-auto pt-10 lg:pt-20 pb-10 flex flex-col gap-10 lg:gap-20 mb-auto min-h-screen justify-between"
  >
    <slot />

    <Footer />
  </body>
</html>
